%h1
  = @patient.first_name
  = @patient.last_name
%h3
  = @patient.dob
%h3
  = @patient.gender
%h3 
  Reason for visit:

  = @patient.description
.workflow
  = render 'workflow_state'


%h3 Current Medications:
    
%a
= medication_list
%br
%br
%div
  = link_to "Add Medication", new_hospital_patient_medication_path(@hospital, @patient)
%br
%br


%h3 Medical Staff Assigned To Patient:
%br
%br
  %p
    = patients_assigned_doctor(@hospital, @patient, @doctor)
  %br
%div 
  = form_for @doctor, url: create_doctor_hospital_patient_path(@hospital, @patient) do |f|
    = f.label :name, "Doctor To Be Assigned:"
    = f.text_field :name
    = f.submit
%br

= link_to "Back", hospital_path(@hospital)




