%h2 #{@hospital.name}
= link_to 'Admit New Patient', new_hospital_patient_path(@hospital)
%br
%br
%h3 Patient List

%ul
  - @hospital.patients.each do |patient|
    %li
      = link_to "#{patient.first_name} #{patient.last_name}", hospital_patient_path(@hospital,patient)
      |
      = link_to "Edit", edit_hospital_patient_path(@hospital, patient)
      |
      = link_to "Destroy", hospital_patient_path(@hospital, patient), method: :delete

%br
= link_to "Back", root_path